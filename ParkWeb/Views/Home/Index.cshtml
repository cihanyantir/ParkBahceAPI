@model ParkWeb.Models.ViewModel.IndexVM



<div class="container">
    <div class="row pb-4 backgroundWhite">
        @foreach (var mb in Model.MilletBahcesiList)
        {


        <div class="container backgroundWhite pb-4">
            <div class="card border">
                <div class="card-header bg-dark text-light ml-0 row container">
                    <div class="col-12 col-md-6">
                        <h1 class="text-warning">@mb.Name</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-right">
                        <h1 class="text-warning">State :@mb.State </h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-8">
                                <div class="row">
                                    <div class="col-12">
                                        <h3 style="color:#bbb9b9">Established:@mb.Established.Year </h3>
                                    </div>
                                    <div class="col-12">
                                        @if (Model.SosyalTesisList.Where(x => x.MilletBahcesiId == mb.Id).Count() > 0)
                                        {
                                            <table class="table table-striped" style="border:1px solid #808080 ">
                                                <tr class="table-secondary">
                                                    <th>
                                                        Sosyal Tesis
                                                    </th>

                                                    <th>Kapasite</th>
                                                </tr>
                                                @foreach (var st in Model.SosyalTesisList.Where(x => x.MilletBahcesiId == mb.Id))
                                                {



                                                    <tr>
                                                        <td>@st.Name</td>

                                                        <td>@st.Doluluk</td>
                                                    </tr>
                                                }
                                            </table>
                                        }
                                        else
                                        {
                                            <p>Sosyal Tesis Bulunamadı</p>
                                        }
                                    </div>
                                </div>
                            </div>

                           
                            <div class="col-12 col-lg-4 text-center">
                                @{ var base64="";
                                    var imgsrc = "";
                                    }
                                @if (mb.Picture == null)
                                {
                                    <img src="https://via.placeholder.com/150" class="card-img-top p-2 rounded" width="100%" />
                                }
                                else
                                {
                                    base64 = Convert.ToBase64String(mb.Picture);
                                    imgsrc = string.Format("data:image/jpg;base64,{0}", base64);

                                    <img src="@imgsrc" class="card-img-top p-2 rounded" width="100%" />
                                }
                                  

                            </div>




                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
</div>